        <div class="search hidden-car">
            <div class="search-left">
                <img src="{{ asset('img/') }}/car.png" alt="Lemaire Autos">
            </div>

            <div class="search-right">
              <div class="search-up">
                  <div class="search-title ">
                      SPECIALISTE DU VEHICULE D'OCCASION A PRIX DISCOUNT
                  </div>
                  <div class="search-menu">
                      <div class="search-menu-contact-zone">
                         <div class="search-menu-contact-img">
                            <img src="{{ asset('img/') }}/speech.png" alt="Menu">
                          </div>
                          <div class="search-menu-contact-txt">
                            CONTACT
                          </div>
                      </div>
                      <div class="search-menu-location-zone">
                         <div class="search-menu-location-img">
                          <img src="{{ asset('img/') }}/map.png" alt="Menu">
                        </div>
                        <div class="search-menu-location-txt">
                          OU SOMMES NOUS
                        </div>
                      </div>
                  </div>
              </div>
              
              <div class="selects-search">
                  
              </div>
            </div>
          </div>
                      
          <div class="list">
          
              <div class='fichecar'>
                  <div class='fichecar-zone-title'>
                      <div class='fichecar-title'>
                        <div class='fichecar-title-big'>{{car.modele.marque.name}} {{car.modele.name}} </div>
                        <div class='fichecar-title-small'>{{car.motorisation}}, {{car.cvfiscaux}}</div>
                      </div>
                      <div class="fichecar-cross"><img src="{{ asset('img/') }}/cross.png" alt="Retour" width="15"></div>
                  </div>
                
                  <div class="fichecar-zone-infos">
                       <div class="fichecar-price-zone">
                            <div class="fichecar-price">
                              {{car.prixdestock}}€
                            </div>
                            <div class="fichecar-price-trait">
                              Prix destockage
                            </div>
                            <div class="fichecar-price-garantie">
                              {{car.prixgarantie}}€
                            </div>
                            <div class="fichecar-price-text">
                              Prix garantie 12 mois
                            </div>
                        </div>
                        <div class="fichecar-details-zone">
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/red-car.png" alt="Type">
                              {{car.type.name}}
                            </div>
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/calendar.png" alt="Année">
                              {{car.annee}}
                            </div>
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/belt.png" alt="Places">
{#                              {{car.places}} places#}
                              4 places
                            </div>
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/color.png" alt="Couleur">
                              {{car.couleur}}
                            </div>
                        </div>
                         <div class="fichecar-details-zone">
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/station.png" alt="Energie">
                              {{car.energie.name}}
                            </div>
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/wheel.png" alt="Kilométrage">
                              {{car.kms}} Kms
                            </div>
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/gear.png" alt="Boite de vitesse">
                              {{car.boitevitesse}}
                            </div>
                            <div class="fichecar-details">
                              <img src="{{ asset('img/') }}/door.png" alt="Portes">
                              {{car.portes}}
                            </div>
                        </div>                            
                  </div>
                            
                <div class="fichecar-photos-zone">
                    <div class="fichecar-arrow-left">
                         <img src="{{ asset('img/') }}/back.png" alt="Précédente" width="100">
                    </div>
                    <div class="fichecar-photo-main">
                        {% for photo in photos %}
                            {% if loop.first %}
                                 <img src="{{ asset('img/cars/') }}{{photo.name}}" alt="{{photo.name}}" width="200">
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="fichecar-arrow-right">
                         <img src="{{ asset('img/') }}/next.png" alt="Précédente" width="100">
                    </div>
                    <div class="fichecar-photos-small-zone">
                        
                        {% for photo in photos %}             
                                 <img src="{{ asset('img/cars/') }}{{photo.name}}" alt="{{photo.name}}" width="50">
                        {% endfor %}
                        
                        
                    </div>
                </div>
                            
                <div class="fichecar-options-zone">
                    <div class="fiche-car-options"
                    </div>    
                    <div class="fiche-car-options"
                    </div>    
                </div>
           

            </div>    
          </div>

