                    </div>
                    <div class="vignette-options2">
                       <ul>
                      {% for option in car.options|slice(4,2) %}
                              {%if option %}<li>{{option}}</li>{% endif %}
                              {%endfor%}
                        <li>En savoir plus...</li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="vignette-price-zone">
                  
                  {% if car.prixdestock > 0 and car.prixgarantie > 0 %}
                    <div class="vignette-price">{{car.prixdestock}}€</div>
                    <div class="vignette-price-trait">Prix destockage</div>
                    <div class="vignette-price-garantie">{{car.prixgarantie}}€</div>
                    <div class="vignette-price-text">Prix garantie 12 mois</div>
                  
                  {% elseif car.prixdestock > 0 and car.prixgarantie <= 0 %}
                    <div class="vignette-price">{{car.prixdestock}}€</div>
                    <div class="vignette-price-trait">Prix destockage</div>
                  
                  {% elseif car.prixdestock <= 0 and car.prixgarantie > 0 %}
                    <div class="vignette-price">{{car.prixgarantie}}€</div>
                    <div class="vignette-price-trait">Prix garantie 12 mois</div>
                      
                  {% elseif car.prixdestock <= 0 and car.prixgarantie <= 0 %}
                    <div class="vignette-price">Prix à venir</div>
                    <div class="vignette-price-trait"></div>
                  {% endif %}

